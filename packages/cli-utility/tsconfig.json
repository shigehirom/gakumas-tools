{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "lib": [
            "es2020",
            "dom"
        ],
        "outDir": "dist",
        "rootDir": "src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "baseUrl": ".",
        "paths": {
            "gakumas-engine": [
                "../gakumas-engine/index.js"
            ],
            "gakumas-engine/*": [
                "../gakumas-engine/*"
            ],
            "gakumas-data": [
                "../gakumas-data/index.js"
            ],
            "gakumas-data/*": [
                "../gakumas-data/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}